<%= link_to "Back",books_path %>
<%= form_for @book do |f| %>
	<table>
	<tr>
		<td>Name:</td>
		<td><%= f.text_field :name, placeholder: "Name" %></td>
	</tr>
	<tr>
		<td>Author:</td>
		<td><%= f.text_field :author, placeholder: "author" %></td>
	</tr>
	<tr>
		<td>Title:</td>
		<td><%= f.text_field :title, placeholder: "title" %></td>
	</tr>
	<tr>
		<td>Description:</td>
		<td><%= f.text_field :description,placeholder: "description"%></td>
	</tr>
	<tr>
		<td>Price:</td>
		<td><%= f.text_field :price,placeholder: "Price"%></td>
	</tr>
	<tr>
		<td><%= f.submit %></td>
	</tr>
</table>
<%end%>
